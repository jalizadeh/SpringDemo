<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<!-- it must be located in "src" folder -->

<beans>
	<bean id="triangle" class="com.jalizadeh.Triangle">
		<!-- video #5 -->
		<!-- <property name="type" value="Equilateral (by setter)"></property> -->
		
		<!-- video #6 -->
		<!-- <constructor-arg index="0" value="Equilateral (by constructor)"/>
		<constructor-arg index="1" type="int" value="20"/> -->
		
		<!-- video #7 -->
		<!-- <property name="point0" ref="pointA"></property>
		<property name="point1" ref="pointB"></property>
		<property name="point2" ref="pointC"></property> -->
		
		<!-- video #8 -->
		<!-- <property name="points">
			<list>
				<ref bean="pointA"/>
				<ref bean="pointB"/>
				<ref bean="pointC"/>
			</list>
		</property> -->
		
		<!-- video #9 
			Using inner beans
			NOTE there is no id and ref -->
		
		<property name="point0" ref="pointA"/>
	
		
		<property name="point1">
			<bean class="com.jalizadeh.Point">
				<property name="x" value="20"/>
				<property name="y" value="0"/>
			</bean>
		</property>
		
		<property name="point2">
			<bean class="com.jalizadeh.Point">
				<property name="x" value="0"/>
				<property name="y" value="20"/>
			</bean>
		</property>
	</bean>
	
	
	<!-- video #7 - object injection -->
	<bean id="pointA" class="com.jalizadeh.Point">
		<property name="x" value="0"/>
		<property name="y" value="0"/>
	</bean>
	
	<bean id="pointB" class="com.jalizadeh.Point">
		<property name="x" value="20"/>
		<property name="y" value="0"/>
	</bean>

	<bean id="pointC" class="com.jalizadeh.Point">
		<property name="x" value="0"/>
		<property name="y" value="20"/>
	</bean>
	
	
	<!-- video #9
	it will work exactly like triangle, like a ref -->
	<alias name="triangle" alias="triangle-alias"/>
	
</beans>