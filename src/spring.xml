<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<!-- it must be located in "src" folder -->

<beans>
	<!-- video 13 -->
	<!-- Bean Definition Inheritance -->
	<!-- "abstract" will make the bean not initializable, and be used only
		 as a place to put premade things -->
	<bean id="tParent" class="com.jalizadeh.Triangle" abstract="true">
		<property name="point0" ref="pointA"/>
		<!-- <property name="">
			<list>
				<bean>...</bean>
			</list>
		</property> -->
	</bean>

	<!-- bean will use it`s parent`s defined beans. not needed to define point0 here -->
	<bean id="triangle" class="com.jalizadeh.Triangle" 
		parent="tParent" init-method="myInit" destroy-method="myDest">
		<property name="point1" ref="pointB"/>
		<property name="point2" ref="pointC"/>
		<!-- 
		<property name="">
			<list merge="true">
				<bean>...</bean>
			</list>
		</property> -->
	</bean>
	
	
	
	<!-- video #7 - object injection -->
	<bean id="pointA" class="com.jalizadeh.Point">
		<property name="x" value="0"/>
		<property name="y" value="0"/>
	</bean>
	
	<bean id="pointB" class="com.jalizadeh.Point">
		<property name="x" value="20"/>
		<property name="y" value="0"/>
	</bean>

	<bean id="pointC" class="com.jalizadeh.Point">
		<property name="x" value="0"/>
		<property name="y" value="20"/>
	</bean>
	
</beans>